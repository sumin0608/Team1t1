<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Context>

    <Resource name="jdbc/javaFramework" type="javax.sql.DataSource"
        url="jdbc:mysql://localhost:3306/JAVA_FRAMEWORK"
        username="root"
        password="password"
        driverClassName="com.mysql.cj.jdbc.Driver"
        maxActive="8"
      	maxIdle="4"
      	maxWait="5000"
    />
    
<!--     jimmy_mySQL -->
    <Resource auth="Container"
		driverClassName="com.mysql.jdbc.Driver"
		maxTotal="20" maxIdle="10" maxWaitMillis="-1"
		name="jdbc/trainer_course" 
		password="password"
		type="javax.sql.DataSource" 
		url="jdbc:mysql://localhost:3306/trainer_course?serverTimezone=Asia/Taipei"
		username="root" 
		/>
	<Environment name="java.naming.factory.initial" value="org.apache.naming.java.javaURLContextFactory" type="java.lang.String"/>
	
</Context>
